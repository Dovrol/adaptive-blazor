    <PackageReference Include="PublishSPAforGitHubPages.Build"  />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AdaptiveBlazor\AdaptiveBlazor.csproj" />
  </ItemGroup>

</Project>